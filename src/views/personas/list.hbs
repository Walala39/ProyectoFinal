<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> Lista de Personas</h3>

        {{#if personas}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class"col-4">   Nombre      </th>
                        <th scope="col">                Marca    </th>
                        <th scope="col">                Cantidad        </th>
                        <th scope="col">                Observación </th>
                        <th scope="col">                Imagen </th>
                        <th scope="col">                Acciones    </th>
                    </tr>
                </thead>
            <tbody>

                {{#each personas}}
                    <tr>
                        <td> {{name}} </td>
                        <td> {{lastname}} </td>
                        <td> {{age}} </td>
                        <td> {{observacion}} </td>
                        <style>
                           #estilo-imagen img {
                            width:50px; 
                            height:50px;
                            border-radius: 3%;
                            transition: 1s;
                            object-fit: cover;
                            }                   

                            #estilo-imagen img:hover {
                            transform: scale(2.10);
                            } 
                        </style>
                        <td id="estilo-imagen"> <img src="/uploads/{{imagen}}" class="d-inline-block align-top" alt="Logo">
                        </td>
                         <td> 
                            <div class="btn-group">
                                <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>   
                         </td>
                    </tr>
                {{/each}}

            </table>

        {{else}}

            <div class="card text-ceter mx-auto">
                <div class="card-header">
                    
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar a una persona en la aplicación</p>
                    <a href="/add" class="btn btn-primary"> Ir a Crear</a>               
            
                </div>
            </div>

        {{/if}}

    </div>
</div>